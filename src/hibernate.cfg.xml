<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

<session-factory>
	
	<property name="connection.username">root</property>
	<property name="connection.password">1234</property>
	<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
	<property name="connection.url"><![CDATA[jdbc:mysql://localhost:3306/studentmanager?useUnicode=true&characterEncoding=utf-8]]></property>
	<property name="dialect">
		org.hibernate.dialect.MySQLInnoDBDialect
	</property>
	<property name="show_sql">true</property>
	<!-- 是否格式化数据库 -->
	<property name="format_sql">true</property>
	<property name="connection.characterEncoding">UTF-8</property>
	<!-- 自动生成数据表的策略 -->
	<property name="hbm2ddl.auto">update</property>
	<property name="hibernate.current_session_context_class">thread</property>
	<mapping resource="Student/Student.hbm.xml"/>
	<mapping resource="Manager/Manager.hbm.xml"/>
	<mapping resource="Teacher/Teacher.hbm.xml"/>
	<mapping resource="Course/Course.hbm.xml"/>
	<mapping resource="Grade/Grade.hbm.xml"/>
	<mapping resource="Scourse/Scource.hbm.xml"/>
</session-factory>

</hibernate-configuration>